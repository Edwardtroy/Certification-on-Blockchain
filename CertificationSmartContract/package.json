{
  "version": "0.0.1",
  "description": "CAC Certification on blockchain",
  "main": "truffle.js",
  "scripts": {
    "start": "ganache-cli --port $npm_package_config_dev_port",
    "test": "concurrently --names ganache,truffle --kill-others \"ganache-cli --port $npm_package_config_test_port\" \"truffle test --network test\"",
    "compile": "truffle compile",
    "predeploy": "npm run compile",
    "deploy": "truffle deploy",
    "deploy:dev": "npm run deploy -- --network development",
    "deoploy:prod": "npm run deploy -- --network production"
  },
  "author": "ThoughtWorks",
  "devDependencies": {
    "concurrently": "4.1.0",
    "ganache-cli": "6.3.0",
    "truffle": "5.0.5",
    "truffle-contract": "4.0.6",
    "truffle-wallet-provider": "0.0.4"
  },
  "config": {
    "test_port": 7545,
    "dev_port": 8545
  }
}
