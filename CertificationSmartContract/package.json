{
  "version": "0.0.1",
  "description": "CAC Certification on blockchain",
  "main": "truffle.js",
  "scripts": {
    "start": "ganache-cli --port $npm_package_config_dev_port",
    "test": "ganache-cli --port $npm_package_config_test_port & wait-port $npm_package_config_test_port; truffle test --network test; TEST_EXIT=$?; kill-port $npm_package_config_test_port; exit $TEST_EXIT",
    "compile": "truffle compile",
    "predeploy": "npm run compile",
    "deploy": "truffle deploy",
    "deploy:dev": "npm run deploy -- --network development",
    "deploy:prod": "npm run deploy -- --network production",
    "console": "truffle console --network development"
  },
  "author": "ThoughtWorks",
  "devDependencies": {
    "ganache-cli": "6.3.0",
    "kill-port": "1.3.2",
    "solc": "0.5.4",
    "truffle": "5.0.5",
    "truffle-contract": "4.0.6",
    "truffle-wallet-provider": "0.0.4",
    "wait-port": "0.2.2",
    "web3": "1.0.0-beta.46"
  },
  "config": {
    "test_port": 7545,
    "dev_port": 8545
  },
  "dependencies": {
    "openzeppelin-solidity": "2.1.3"
  }
}
