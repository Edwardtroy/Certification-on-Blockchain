.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;  
  box-sizing: border-box;
}

.userInfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userInfo-avatar {
  width: 60px; 
  height: 60px; 
  border-radius: 50%;
}

.userInfo-nickname {
  color: #aaa;
}

.search-input {
  font-size: 16px;
  margin: 30px 0 20px;
  border-bottom: 1px solid #DFDFDF;
}

.btn {
  font-size: 16px;
  height: 2em;
  line-height: 2em;
}